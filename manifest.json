{
    "manifest_version": 2,
    "name": "LeafLLM",
    "version": "1.0.0",
    "description": "A privacy-respecting LLM extension that runs locally in your browser.",
    "permissions": [
        "storage",
        "contextMenus",
        "activeTab"
    ],
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "icons/leaf-16.png",
        "48": "icons/leaf-48.png",
        "128": "icons/leaf-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/content-script.js"
            ]
        }
    ],
    "content_security_policy": "script-src 'self' https://esm.run; object-src 'self';",
    "browser_specific_settings": {
        "gecko": {
            "id": "leafllm@bthink.bgu.ac.il"
        }
    }
}

